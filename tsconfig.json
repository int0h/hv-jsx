{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "inlineSourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./types",
        "lib": [
            "es5",
            "es2015.promise"
        ],
        "noUnusedLocals": true,
        "jsx": "react",
        "jsxFactory": "jsx",
        "experimentalDecorators": true
    },
    "include": [
        "./src/index.ts",
        "./src/tests/**/*.ts",
        "./src/tests/**/*.tsx",
        "./src/temp/*.ts"
    ]
}
